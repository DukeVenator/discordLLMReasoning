{
  "name": "llmcordts",
  "version": "1.0.0",
  "description": "TypeScript version of LLMCord, a versatile Discord bot connecting to various LLMs.",
  "main": "dist/src/index.js",
  "scripts": {
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/src/index.js",
    "dev": "nodemon --watch src --ext ts --exec \"timeout 10s ts-node -r tsconfig-paths/register src/index.ts\"",
    "dev:once": "timeout 20s ts-node -r tsconfig-paths/register src/index.ts"
  },
  "keywords": [
    "discord",
    "bot",
    "llm",
    "ai",
    "openai",
    "gemini",
    "ollama",
    "typescript"
  ],
  "author": "Your Name or Org",
  "license": "MIT",
  "dependencies": {
    "@dqbd/tiktoken": "^1.0.20",
    "@google/genai": "^0.7.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.16",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^22.13.14",
    "axios": "^1.8.4",
    "better-sqlite3": "^11.9.1",
    "discord.js": "^14.18.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "lodash.merge": "^4.6.2",
    "lru-cache": "^11.1.0",
    "openai": "^4.90.0",
    "pino": "^9.6.0",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitest/coverage-v8": "^3.0.9",
    "eslint": "^9.23.0",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.13",
    "tsconfig-paths": "^4.2.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9"
  }
}
